        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BierBuddy.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" MinHeight="400" Width="1920" MinWidth="600" SizeChanged="BierBuddyMainWindow_SizeChanged">
    <DockPanel Background="#2E3532">
        <Border Width="{Binding NavBarSize}" Background="#F19F2C" DockPanel.Dock="Left" CornerRadius="0,40,40,0">
            <Border.DataContext>
                <local:MainWindow />
            </Border.DataContext>
            <DockPanel>
                <Border Height="200" Background="#FCFFF7" DockPanel.Dock="Top" CornerRadius="0,40,40,0">
                    
                </Border>
                <Border>
                    
                </Border>
            </DockPanel>
        </Border>
        <Border>
            
        </Border>
    </DockPanel>
</Window>
