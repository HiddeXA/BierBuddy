<Window x:Class="BierBuddy.UI.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BierBuddy.UI"
        mc:Ignorable="d"
        Title="LoginScreen" Height="750" Width="750" MinHeight="750" MaxHeight="750" MinWidth="750" MaxWidth="750">
    <Grid Background="#2E3532">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Canvas.Left="30" Canvas.Top="30" Height="647" Width="504" Margin="0,0,0,43">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="104*"/>
                <ColumnDefinition Width="17*"/>
                <ColumnDefinition Width="87*"/>
            </Grid.ColumnDefinitions>

            <Border CornerRadius="30" BorderBrush="Transparent" BorderThickness="2" Grid.ColumnSpan="3" Background="#434D49">
                <StackPanel>
                    <Border CornerRadius="30" BorderBrush="Transparent" BorderThickness="2" Margin="10" Background="#F19F2C">
                        <Label x:Name="Title" FontSize="48" Width="350" Height="79" Content="Inloggen" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="#F19F2C" />
                    </Border>
                    <StackPanel>
                        <Border CornerRadius="20" BorderBrush="#F19F2C" BorderThickness="2" Margin="20" Background="#FCFFF7">
                            <TextBox x:Name="EmailInput" Height="60" Margin="20" FontSize="40" Background="#FCFFF7" BorderBrush="Transparent"/>
                        </Border>
                        <Border CornerRadius="20" BorderBrush="#F19F2C" BorderThickness="2" Margin="20" Background="#FCFFF7">
                            <PasswordBox x:Name="PasskeyInput" Height="60" Margin="20" FontSize="40" Background="#FCFFF7" BorderBrush="Transparent"/>
                        </Border>
                    </StackPanel>
                    <Button Height="75" Margin="20" Click="Loginclick">
                        <WrapPanel VerticalAlignment="Center" >
                            <Label x:Name="Loggin" FontSize="32" VerticalAlignment="Center" Content="Log in"/>
                        </WrapPanel>
                    </Button>
                    <Button Height="75" Margin="20" Click="RegitreerClick">
                        <WrapPanel VerticalAlignment="Center">
                            <Label x:Name="Registreer" FontSize="32" VerticalAlignment="Center" Content="Registreer"/>
                        </WrapPanel>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</Window>
